{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "space-before-function-paren": ["error", "ignore"],
      "react/jsx-uses-react": "error",   
      "react/jsx-uses-vars": "error" 
    }
}
